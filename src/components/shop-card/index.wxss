.text-hide{display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:1;overflow:hidden}.c-card{--skeleton-color:#f2f2f2;--main-color:tomato;width:100%;background:white;border-radius:20rpx;box-shadow:0 0 20rpx rgba(0,0,0,0.05);overflow:hidden;display:flex;flex-flow:column}.c-card.row{flex-flow:row}.c-card.row .loaded-view{width:350rpx}.c-card.row .content{width:30%;flex-grow:1;height:350rpx;display:inline-flex;flex-flow:column;justify-content:space-between}.c-card .loaded-view{width:100%;height:350rpx;background:var(--skeleton-color);transition:all .1s}.c-card .content{width:100%;display:flex;flex-flow:column}.c-card .title{width:calc(100% - 40rpx);padding:30rpx 20rpx;font-size:26rpx;color:#333;line-height:34rpx;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:1;overflow:hidden}.c-card .action{display:flex;border-bottom:1rpx solid #efefef;padding:0 20rpx 30rpx 20rpx}.c-card .action .item{display:flex;align-items:center;font-size:24rpx;padding-right:20rpx}.c-card .action .item .number{font-weight:bold;padding-left:5rpx;color:#999}.c-card .author{width:calc(100% - 40rpx);padding:40rpx 20rpx;display:inline-flex}.c-card .author .avatar{width:70rpx;height:70rpx;border-radius:100%;overflow:hidden;background:var(--skeleton-color)}.c-card .author .info{width:50%;flex-grow:1;padding-left:20rpx;display:inline-flex;flex-flow:column}.c-card .author .nickname{color:var(--main-color);padding-right:4rpx;font-size:28rpx;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:1;overflow:hidden}.c-card .author .name{font-size:24rpx;color:#999}.c-card .author .category{font-size:24rpx;color:tomato;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:1;overflow:hidden}