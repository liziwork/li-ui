<view class="container">
	<panel title="基础用法">
		<view class="content">
			<li-icon
				class="item"
				name="like"
				size="50rpx"
			/>
			<li-icon
				class="item"
				name="user"
				size="50rpx"
			/>
		</view>
	</panel>
	<panel title="徽标提示">
		<view class="content">
			<li-icon
				class="item"
				name="notification"
				size="50rpx"
				dot
			/>
			<li-icon
				class="item"
				name="message"
				size="50rpx"
				info="6"
			/>
			<li-icon
				class="item"
				name="cart"
				size="50rpx"
				info="99+"
			/>
		</view>
	</panel>
	<panel title="图标颜色">
		<view class="content">
			<li-icon
				class="item"
				name="crown"
				size="50rpx"
				color="#926bf6"
			/>
			<li-icon
				class="item"
				name="home"
				size="50rpx"
				color="#fc0d1b"
			/>
			<li-icon
				class="item"
				name="mail"
				size="50rpx"
				color="#29c2c1"
				dot-bg="#29c2c1"
				dot
			/>
			<li-icon
				class="item"
				name="star"
				size="50rpx"
				color="#090822"
				dot-bg="#090822"
				info="66"
			/>
		</view>
	</panel>
	<panel title="图标大小">
		<view class="content">
			<li-icon
				class="item"
				name="slice"
				size="50rpx"
			/>
			<li-icon
				class="item"
				name="sun"
				size="80rpx"
			/>
			<li-icon
				class="item"
				name="text"
				size="100rpx"
			/>
		</view>
	</panel>
	<panel title="多色图标">
		<view class="content">
			<li-icon
				class="item"
				src="../../assets/icons/watermelon.svg"
				size="50rpx"
			/>
			<li-icon
				class="item"
				src="../../assets/icons/coconut.svg"
				size="50rpx"
			/>
			<li-icon
				class="item"
				src="../../assets/icons/coupon.svg"
				size="50rpx"
			/>
			<li-icon
				class="item"
				src="../../assets/icons/setting.svg"
				size="50rpx"
			/>
			<li-icon
				class="item"
				src="../../assets/icons/photo.svg"
				size="50rpx"
			/>
			<li-icon
				class="item"
				src="../../assets/icons/music.svg"
				size="50rpx"
			/>
		</view>
	</panel>
	<button
		class="btn"
		bind:tap="click"
	>
		<li-icon
			name="search"
			size="30rpx"
		/>
		<text>所有图标</text>
	</button>
</view>
<li-safe-area />