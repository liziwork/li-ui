<view class="li-icon">
	<image
		wx:if="{{ src }}"
		src="{{ src }}"
		style="width: {{ size }}; height: {{ size }};"
	/>
	<view
		wx:else
		class="iconfont {{ name }}"
		style="font-size: {{ size }};color: {{ color }}"
	/>
	<view
		wx:if="{{ dot }}"
		class="dot"
		style="background: {{ dotBg }}"
	/>
	<view
		wx:if="{{ info }}"
		class="dot-info"
		style="background: {{ dotBg }}"
	>{{ info }}</view>
</view>