<view
	class="li-image {{ round ? 'round' : '' }}"
	style="border-radius: {{ radius }}; width: {{ width }}; height: {{ height }}; background: {{ bgColor }}"
>
	<image
		class="image"
		src="{{ src }}"
		mode="{{ mode }}"
		bind:load="onLoaded"
		bind:error="onError"
	/>
	<view
		wx:if="{{ status === 'loading' }}"
		class="loading"
	>
		<slot
			wx:if="{{ loadingSlot }}"
			name="loading"
		/>
		<li-icon
			wx:else
			name="album"
			color="#dcdede"
		/>
	</view>
	<view
		wx:if="{{ status === 'error' }}"
		class="error"
	>
		<slot
			wx:if="{{ errorSlot }}"
			name="error"
		/>
		<li-icon
			wx:else
			name="load-error"
			color="#dcdede"
		/>
	</view>
</view>